    setmetatile(7, 10, 0x001, FALSE)
    setmetatile(7, 11, 0x001, FALSE)
    setmetatile(8, 9, 0x001, FALSE)
    setmetatile(9, 9, 0x001, FALSE)
    setmetatile(8, 10, 0x001, FALSE)
    setmetatile(9, 10, 0x001, FALSE)
