    lockall
    applymovement(1, NPC_2)
    waitmovement(0)
    msgbox(NPC_Talk_3, MSGBOX_AUTOCLOSE)
    waitmessage
    closemessage
    applymovement(1, NPC_3)
    waitmovement(0)
    removeobject(1)
    setmetatile(6, 9, 0x1E4, TRUE)
